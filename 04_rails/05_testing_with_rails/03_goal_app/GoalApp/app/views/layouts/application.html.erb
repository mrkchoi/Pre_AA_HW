<!DOCTYPE html>
<html>
  <head>
    <title>GoalApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css', media: 'all' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <main class="ui container">

      <header class="header_main">
        <div class="header_title">
          <h1>
            <%= link_to 'GoalApp', users_url %>
          </h1>
          
        </div>
        <div class="header_auth">
          <% if current_user && logged_in? %>
            <p>Currently logged in as: <%= current_user.username %></p>
            <%= button_to 'Logout', session_url(current_user.id), method: :delete, class: 'ui button' %>
          <% else %>
            <%= button_to 'Sign in', new_session_url, method: :get, class: 'ui button' %>
            <%= button_to 'Sign up', new_user_url, method: :get, class: 'ui button' %>
          <% end %>
        </div>
      </header>
      <div class="ui divider"></div>
      
      <%= yield %>

    </main>
  </body>
</html>
