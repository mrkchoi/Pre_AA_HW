<h1>Edit <%= Album.find_by(id: params[:id]).title %></h1>
<div class="ui divider"></div>

<form action="<%= album_url %>" method="post" class="ui form">
  <%= auth_token %>
  <%= patch_input %>
  <label for="album_name">Album title</label>
  <input type="text" id="album_name" name="album[title]" value="<%= @album.title %>">
  
  <br>

  <label for="album_band">Band</label>
  <select name="album[band_id]" id="album_band">
    <% Band.all.each do |band| %>
      <option value="<%= band.id %>" <%= band == Band.find_by(id: @album.band_id) ? 'SELECTED' : '' %>><%= band.name %></option>
    <% end %>
  </select>
  <br>

    <label for="album[album_type]">Album type: &nbsp;&nbsp;</label>
        <label for="album_type--studio">
          <input type="radio" name="album[album_type]" value="Studio" <%= @album.album_type == 'Studio' ? 'checked' : '' %>>
          Studio
        </label>

        <label for="album_type--studio">
          <input type="radio" name="album[album_type]" value="Live" <%= @album.album_type == 'Studio' ? '' : 'checked' %>>
          Live
        </label>

  <div>
  <label for="album_year">Year</label>
    <input type="text" id="album_year" name="album[year]" value="<%= @album.year %>">
  </div>
  <br>

  <input type="submit" class="ui button" value="Edit Album">

</form>